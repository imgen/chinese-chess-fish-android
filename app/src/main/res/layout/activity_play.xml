<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.ChineseChess.FullscreenContainer"
    android:background="@drawable/boardgb"
    tools:context=".PlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/playerbt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/computer_40px" />

            <ImageButton
                android:id="@+id/playerbackbt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/arrow_back_40px" />

            <ImageButton
                android:id="@+id/playerforwardbt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/arrow_forward_40px" />

            <ImageButton
                android:id="@+id/autoplaybt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/play_circle_40px" />

            <ImageButton
                android:id="@+id/playeraltbt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/alt_route_40px" />

            <ImageButton
                android:id="@+id/optionbt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/menu_40px" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/chesslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:minHeight="200dp">

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/newbt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/new_window_40px" />

            <ImageButton
                android:id="@+id/backbt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/arrow_back_40px" />

            <ImageButton
                android:id="@+id/forwardbt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/arrow_forward_40px" />

            <ImageButton
                android:id="@+id/searchbt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/search_40px" />

            <ImageButton
                android:id="@+id/exitbt"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?android:attr/selectableItemBackground"
                app:srcCompat="@drawable/logout_40px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/cardview_light_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/statustv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TextView"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/choice1bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/looks_1_40px" />

                <ImageButton
                    android:id="@+id/choice2bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/looks_2_40px" />

                <ImageButton
                    android:id="@+id/choice3bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    android:background="?android:attr/selectableItemBackground"
                    app:srcCompat="@drawable/looks_3_40px" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movehistorytv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="着法历史" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:id="@+id/historyTable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </TableLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hinttv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="着法提示" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:id="@+id/hintTable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableLayout>

                </ScrollView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>